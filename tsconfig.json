{
  "compilerOptions": {
    "target": "es2020", 
    "module": "nodenext", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", 
    "rootDir": "./",   
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./**/*.ts"]
}